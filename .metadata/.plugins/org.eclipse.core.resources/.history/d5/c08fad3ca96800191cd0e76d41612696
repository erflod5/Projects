import java.awt.Color;
import java.awt.Graphics;

public class Item {

	private int xC, yC, width, height;
	
	public Item(int xC, int yC, int l) {
		this.xC = xC;
		this.yC = yC;
		width = height = l;
	}
	
	public void tick() {
		
		
	}
	
	public void draw(Graphics g) {
		g.setColor(Color.RED);
		g.fillRect(xC*width, yC*height, width, height);
	}
}
